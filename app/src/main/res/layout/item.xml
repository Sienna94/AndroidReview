<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_pname"
        android:text="product name"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_pimage"
        android:src="@drawable/pimgex"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_pname"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_pcontent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_alignStart="@id/iv_pimage"
        android:layout_alignEnd="@id/iv_pimage"
        android:layout_below="@id/iv_pimage"
        android:textSize="15sp"
        android:text="product description"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>